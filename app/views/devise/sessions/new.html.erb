<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>  
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign In</h5>
            <form class="form-signin">
              <div class="form-label-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email address" %>
                <%= f.label :email %>
              </div>
              <div class="form-label-group">
                <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Password" %>
                <%= f.label :password %>
              </div>

              <div class="custom-control custom-checkbox mb-3">
                <% if devise_mapping.rememberable? %>
                  <%= f.check_box :remember_me, class:"custom-control-input", id:"customCheck1" %>
                  <%= f.label :remember_me, class:"custom-control-label" %>
                <% end %>
              </div>
              <%= f.submit "Log in", class:"btn btn-lg btn-primary btn-block text-uppercase" %>
              <hr class="my-4">
              <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                <%= link_to "Sign up", new_registration_path(resource_name), class:"btn btn-lg btn-google btn-block text-uppercase" %>
              <% end %>
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot your password?", new_password_path(resource_name), class:"btn btn-lg btn-facebook btn-block text-uppercase" %>
              <% end %>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<%= render "devise/shared/links" %>
<% end %>
